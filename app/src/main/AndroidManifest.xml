<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dm.chatclient" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ChatClientApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".view.LoginView"
            android:label="@string/app_name" >
            android:windowSoftInputMode="stateVisible|adjustResize"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.AdvancedSettingsActivity"
            android:label="@string/title_activity_advanced_settings" >
        </activity>
        <activity
            android:name=".view.ContactListView"
            android:label="@string/title_activity_contact_list" >
        </activity>
        <activity
            android:name=".view.ConversationView"
            android:label="@string/title_activity_conversation"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".view.RegisterView"
            android:label="@string/title_activity_register_update" >
        </activity>
        <activity
                android:name=".view.UpdateView"
                android:label="@string/title_activity_register_update" >
        </activity>
    </application>

</manifest>
