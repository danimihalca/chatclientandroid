<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/fullNameView" android:layout_margin="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/userNameView"
            android:layout_below="@+id/fullNameView" android:layout_alignRight="@+id/fullNameView"
            android:layout_alignEnd="@+id/fullNameView" android:layout_margin="5dp"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/onlineImageView"
            android:scaleType="fitXY"
            android:layout_alignBottom="@+id/fullNameView" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_margin="5dp"/>
</RelativeLayout>